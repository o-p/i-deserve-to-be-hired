{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "I Deserve to be Hired",
  "compilerOptions": {
    "target": "ES2015",
    "module": "none",
    "strict": true,
    "outDir": "es",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}
